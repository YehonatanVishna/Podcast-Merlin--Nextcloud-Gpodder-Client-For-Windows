                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

            </ScrollViewer.Style>-->
                <!--<TextBlock>show notes:</TextBlock>-->
                <winui:WebView2 Background="Transparent"
                      IsRightTapEnabled="False"
                      x:Name="show_notes_box"  
                      Visibility="Visible"                      
                      ></winui:WebView2>
            </ScrollViewer>

    </Grid>
</Page>
